{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "../dist-electron",
    "rootDir": "..",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": [
    "main/**/*",
    "preload/**/*",
    "../shared/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "../dist-electron"
  ]
}