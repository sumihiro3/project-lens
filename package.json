{
  "name": "project-lens-desktop",
  "version": "1.0.0",
  "description": "ProjectLens - Backlogチケット管理デスクトップアプリケーション",
  "main": "dist-electron/main/index.cjs",
  "type": "module",
  "scripts": {
    "dev": "nuxt dev --host",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run compile:electron && npx electron .\"",
    "compile:electron": "npx tsc electron/main/index.ts --outDir dist-electron/main --module commonjs --target es2020 --moduleResolution node --esModuleInterop && npx tsc electron/preload/index.ts --outDir dist-electron/preload --module commonjs --target es2020 --moduleResolution node --esModuleInterop && mv dist-electron/main/index.js dist-electron/main/index.cjs && mv dist-electron/preload/index.js dist-electron/preload/index.cjs",
    "build": "nuxt build",
    "build:electron": "nuxt build && electron-vite build",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "build:win": "npm run build:electron && electron-builder --win",
    "build:mac": "npm run build:electron && electron-builder --mac",
    "build:linux": "npm run build:electron && electron-builder --linux",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "type-check": "nuxt typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@mdi/font": "^7.4.47",
    "@nuxt/eslint": "^1.8.0",
    "@nuxtjs/i18n": "^10.0.4",
    "@pinia/nuxt": "^0.11.2",
    "@vueuse/core": "^13.6.0",
    "@vueuse/nuxt": "^13.6.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "nuxt": "^3.18.1",
    "pinia": "^3.0.3",
    "pug": "^3.0.3",
    "sass": "^1.80.0",
    "vite-plugin-vuetify": "^2.0.4",
    "vue": "^3.5.0",
    "vue-i18n": "^9.14.5",
    "vuetify": "^3.9.4"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/test-utils": "^3.16.0",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.0",
    "electron-vite": "^4.0.0",
    "happy-dom": "^16.3.0",
    "playwright-core": "^1.49.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.0",
    "vue-tsc": "^3.0.5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.projectlens.desktop",
    "productName": "ProjectLens",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}
