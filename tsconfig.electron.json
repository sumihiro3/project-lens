{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist-electron",
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitOverride": false,
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": false,
    "types": [
      "node",
      "electron"
    ]
  },
  "include": [
    "electron/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    ".nuxt",
    ".output",
    "src"
  ]
}
